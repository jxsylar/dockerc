{
  "name": "docker-service",
  "version": "0.0.0",
  "type": "module",
  "author": "jxsylar",
  "description": "Docker build and run services based on docker-compose.yaml",
  "repository": "jxsylar/docker-service",
  "homepage": "https://github.com/jxsylar/docker-service",
  "bugs": "https://github.com/jxsylar/docker-service/issues",
  "license": "MIT",
  "scripts": {
    "build": "shx rm -rf dist && tsc -b",
    "lint": "eslint . --ext .ts",
    "postpack": "shx rm -f oclif.manifest.json",
    "posttest": "npm run lint",
    "prepack": "npm run build && oclif manifest && oclif readme",
    "prepare": "npm run build",
    "test": "mocha --forbid-only \"test/**/*.test.ts\"",
    "version": "oclif readme && git add README.md"
  },
  "keywords": [
    "oclif",
    "docker",
    "service"
  ],
  "main": "",
  "exports": "./lib/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "docker-service": "./bin/run.js"
  },
  "files": [
    "/bin",
    "/dist",
    "/oclif.manifest.json"
  ],
  "oclif": {
    "bin": "docker-service",
    "commands": "./dist/commands",
    "dirname": "docker-service",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-not-found"
    ],
    "topicSeparator": " ",
    "topics": {
      "hello": {
        "description": "Say hello to the world and others"
      }
    }
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9",
    "pnpm": ">=8"
  },
  "packageManager": "pnpm@8.10.5",
  "dependencies": {
    "@oclif/core": "^3",
    "@oclif/plugin-help": "^5",
    "@oclif/plugin-not-found": "^3.0.4",
    "@oclif/plugin-plugins": "^4"
  },
  "devDependencies": {
    "@oclif/prettier-config": "^0.2.1",
    "@oclif/test": "^3",
    "@types/chai": "^4",
    "@types/mocha": "^10",
    "@types/node": "^18",
    "chai": "^4",
    "eslint": "^8",
    "eslint-config-oclif": "^5",
    "eslint-config-oclif-typescript": "^3",
    "eslint-config-prettier": "^9.0.0",
    "mocha": "^10",
    "oclif": "^4.0.3",
    "prettier": "^3.1.0",
    "shx": "^0.3.4",
    "ts-node": "^10.9.1",
    "typescript": "^5"
  }
}