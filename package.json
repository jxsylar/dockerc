{
  "name": "dockerc",
  "version": "0.0.1",
  "type": "module",
  "author": "jxsylar",
  "description": "CLI wrapper for docker build and run services based on `docker-compose.yaml` in frontend project",
  "repository": "jxsylar/dockerc",
  "homepage": "https://github.com/jxsylar/dockerc",
  "bugs": "https://github.com/jxsylar/dockerc/issues",
  "license": "MIT",
  "scripts": {
    "build": "shx rm -rf dist && tsc -b",
    "lint": "eslint . --ext .ts",
    "postpack": "shx rm -f oclif.manifest.json",
    "posttest": "npm run lint",
    "prepack": "npm run build && oclif manifest && oclif readme",
    "prepare": "npm run build",
    "test": "mocha --forbid-only \"test/**/*.test.ts\"",
    "doc": "oclif readme",
    "release": "release-it"
  },
  "keywords": [
    "oclif",
    "docker-compose",
    "cli"
  ],
  "main": "",
  "exports": "./lib/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "dockerc": "./bin/run.js"
  },
  "files": [
    "/bin",
    "/dist",
    "/oclif.manifest.json"
  ],
  "oclif": {
    "bin": "dockerc",
    "commands": "./dist/commands",
    "dirname": ".",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-not-found"
    ],
    "topicSeparator": " ",
    "topics": {
      "hello": {
        "description": "Say hello to the world and others"
      }
    }
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9",
    "pnpm": ">=8"
  },
  "packageManager": "pnpm@8.11.0",
  "dependencies": {
    "@inquirer/prompts": "^3.3.0",
    "@oclif/core": "^3.14.1",
    "@oclif/plugin-help": "^6.0.7",
    "@oclif/plugin-not-found": "^3.0.4",
    "@oclif/plugin-plugins": "^4.1.10",
    "chalk": "^5.3.0",
    "ora": "^7.0.1",
    "semver": "^7.5.4",
    "shelljs": "^0.8.5"
  },
  "devDependencies": {
    "@oclif/prettier-config": "^0.2.1",
    "@oclif/test": "^3.1.3",
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.10.4",
    "@types/semver": "^7.5.6",
    "@types/shelljs": "^0.8.15",
    "chai": "^4.3.10",
    "eslint": "^8.55.0",
    "eslint-config-oclif": "^5.0.0",
    "eslint-config-oclif-typescript": "^3.0.24",
    "eslint-config-prettier": "^9.1.0",
    "mocha": "^10.2.0",
    "oclif": "^4.0.4",
    "prettier": "^3.1.0",
    "release-it": "^17.0.0",
    "shx": "^0.3.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3"
  }
}
